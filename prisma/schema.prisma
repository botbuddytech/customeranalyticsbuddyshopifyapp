// Prisma schema - Reserved for Supabase (custom app data)
// Shopify sessions are handled separately via SQLite

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Config model - Stores onboarding progress and app configuration per shop
model Config {
  id                 String   @id @default(uuid())
  shop               String   @unique
  completedSteps     String[] @default([]) // All completed steps (both manual and auto)
  autoCompletedSteps String[] @default([]) // Steps that were auto-completed (cannot be undone)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("onboardingtaskdata")
}

// DashboardPreferences model - Stores dashboard visibility preferences per shop
model DashboardPreferences {
  id               String   @id @default(uuid())
  shop             String   @unique
  visibilityConfig String   @db.Text // JSON string of DashboardVisibility
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("dashboard_preferences")
}

// SavedCustomerList model - Stores saved customer segment lists per merchant
model SavedCustomerList {
  id          String   @id @default(uuid())
  shop        String // Shop identifier (not unique - merchant can have multiple lists)
  listName    String // Name of the saved list
  queryData   String   @db.Text // JSON string of FilterData (complete query/filters)
  customerIds String[] @default([]) // Array of customer IDs in this list (optional, for quick access)
  source      String   @default("filter-audience") // Source: "ai-search", "filter-audience", or "manual"
  status      String   @default("active") // Status: "active" or "archived"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([shop]) // Index for faster queries by shop
  @@map("saved_customer_lists")
}

// UserPreferences model - Stores per-shop UI/user preferences (e.g. language)
model UserPreferences {
  id          String   @id @default(uuid())
  shop        String   @unique
  preferences String   @db.Text // JSON string of UserPreferences (currently just language)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("user_preferences")
}

model SubscriptionPlan {
  id                String  @id @default(uuid())
  code              String  @unique // e.g. "free", "paid"
  name              String // e.g. "Free", "Growth"
  price             String // e.g. "$0", "$79"
  priceNote         String
  description       String
  badgeTone         String? // "success" | "attention" | "info"
  badgeLabel        String?
  primaryCtaLabel   String
  primaryCtaVariant String // "primary" | "secondary" | "plain"
  isCurrentDefault  Boolean @default(false)

  benefits SubscriptionPlanBenefit[]

  @@map("subscription_plans")
}

model SubscriptionPlanBenefit {
  id        String @id @default(uuid())
  planId    String
  sortOrder Int
  label     String

  plan SubscriptionPlan @relation(fields: [planId], references: [id], onDelete: Cascade)

  @@index([planId, sortOrder])
  @@map("subscription_plan_benefits")
}
